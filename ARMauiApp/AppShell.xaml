<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ARMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ARMauiApp.Pages"
    Title="ARMauiApp"
    FlyoutBehavior="Disabled"
    Visual="Material">

        <Shell.Resources>
        <Style TargetType="FontImageSource">
            <Setter Property="Color" Value="Black"/>
            <Setter Property="Size" Value="20"/>
        </Style>
    </Shell.Resources>


    <!-- Onboarding -->
    <ShellContent x:Name="OnboardingShell"
                  Route="onboarding"
                  ContentTemplate="{DataTemplate pages:OnboardingPage}"
                  Shell.FlyoutBehavior="Disabled" />

    <!-- Splash Screen -->
    <ShellContent x:Name="SplashShell"
                  Route="splash"
                  ContentTemplate="{DataTemplate pages:SplashPage}"
                  Shell.FlyoutBehavior="Disabled" />

    <!-- Authentication Shell -->
    <ShellContent x:Name="LoginShell"
                  Route="login"
                  ContentTemplate="{DataTemplate pages:LoginPage}"
                  Shell.FlyoutBehavior="Disabled" />

    <ShellContent x:Name="RegisterShell"
                  Route="register"
                  ContentTemplate="{DataTemplate pages:RegisterPage}"
                  Shell.FlyoutBehavior="Disabled" />

<TabBar x:Name="MainTabBar" Route="main"
        Shell.TabBarBackgroundColor="White"
        Shell.TabBarForegroundColor="Black"
        Shell.TabBarUnselectedColor="#66000000"
        Shell.TabBarTitleColor="Black">

  <ShellContent Title="Sản phẩm"
                Route="products"
                ContentTemplate="{DataTemplate pages:ProductListPage}"
                Icon="shop" />

  <ShellContent Title="Giỏ hàng"
                Route="cart"
                ContentTemplate="{DataTemplate pages:CartPage}"
                Icon="cart" />

  <ShellContent Title="Gói"
                Route="plans"
                ContentTemplate="{DataTemplate pages:PlansPage}"
                Icon="subscription" />

  <ShellContent Title="Tài khoản"
                Route="account"
                ContentTemplate="{DataTemplate pages:AccountPage}"
                Icon="user" />
</TabBar>

</Shell>
