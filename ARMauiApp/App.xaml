<?xml version = "1.0" encoding = "UTF-8" ?>
<Application x:Class="ARMauiApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ARMauiApp.Converters"
             xmlns:u="clr-namespace:UraniumUI.Resources;assembly=UraniumUI"
             xmlns:m="clr-namespace:UraniumUI.Material.Resources;assembly=UraniumUI.Material"
             UserAppTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />
                <m:StyleResource ColorsOverride="{x:Reference appColors}" BasedOn="{x:Reference appStyles}" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Add Converters -->

            <local:CountToBoolConverter x:Key="CountToBoolConverter" />
            <local:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <local:BoolToActiveStatusConverter x:Key="BoolToActiveStatusConverter" />
            <local:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter" />
            <local:StringToBoolConverter x:Key="StringToBoolConverter" />
            <local:AllFalseMultiConverter x:Key="AllFalseMultiConverter" />
            <local:AllTrueMultiConverter x:Key="AllTrueMultiConverter" />
            <local:GreaterThanOneConverter x:Key="GreaterThanOneConverter" />
            <local:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />

            <LinearGradientBrush x:Key="GradientPurple" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7B5CF6" Offset="0"/>
                <GradientStop Color="#5A45F0" Offset="0.55"/>
                <GradientStop Color="#3E2AD6" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="GradientOrange" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFC36A" Offset="0"/>
                <GradientStop Color="#FF9F3A" Offset="0.55"/>
                <GradientStop Color="#FF7A00" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="GradientAqua" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#59E3E6" Offset="0"/>
                <GradientStop Color="#58C7F7" Offset="0.55"/>
                <GradientStop Color="#7C8CFF" Offset="1"/>
            </LinearGradientBrush>

            <!-- Gradient from SVG: Purple to Cyan -->
            <LinearGradientBrush x:Key="GradientButton" StartPoint="0,0" EndPoint="1,0">
                <!-- Tím nhạt sang xanh ngọc -->
                <GradientStop Color="#7C3AED" Offset="0"/>
                <!-- Tím tươi -->
                <GradientStop Color="#6D28D9" Offset="0.25"/>
                <!-- Tím đậm -->
                <GradientStop Color="#4F46E5" Offset="0.5"/>
                <!-- Indigo -->
                <GradientStop Color="#3B82F6" Offset="0.75"/>
                <!-- Xanh dương sáng -->
                <GradientStop Color="#06B6D4" Offset="1"/>
                <!-- Xanh ngọc -->
            </LinearGradientBrush>

            <!-- Gradient khi hover -->
            <LinearGradientBrush x:Key="GradientButtonHover" StartPoint="0,0" EndPoint="1,0">
                <!-- Tím sáng -->
                <GradientStop Color="#A78BFA" Offset="0"/>
                <!-- Tím tươi sáng hơn -->
                <GradientStop Color="#8B5CF6" Offset="0.25"/>
                <!-- Tím đậm nhưng sáng -->
                <GradientStop Color="#6366F1" Offset="0.5"/>
                <!-- Indigo sáng -->
                <GradientStop Color="#60A5FA" Offset="0.75"/>
                <!-- Xanh ngọc sáng -->
                <GradientStop Color="#22D3EE" Offset="1"/>
            </LinearGradientBrush>


        </ResourceDictionary>
    </Application.Resources>
</Application>
