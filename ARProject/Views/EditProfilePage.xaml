<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ARProject.ViewModels"
             x:Class="ARProject.Views.EditProfilePage"
             x:DataType="vm:EditProfileViewModel"
             Title="Edit Profile">


    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Username" />
        <Entry Text="{Binding UserName}" Placeholder="Enter your name" />

        <Label Text="Gender (0: Other, 1: Male, 2: Female)" />
        <Entry Text="{Binding Gender}" Keyboard="Numeric" />

        <Label Text="Height (cm)" />
        <Entry Text="{Binding Height}" Keyboard="Numeric" />

        <Label Text="Weight (kg)" />
        <Entry Text="{Binding Weight}" Keyboard="Numeric" />

        <Button Text="Save"
                Command="{Binding SaveProfileCommand}" />
    </VerticalStackLayout>
</ContentPage>
